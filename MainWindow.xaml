<Window x:Class="Anime_Stiker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Anime_Stiker"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Anime Sticker Creator" 
        Height="250" Width="520"   
        Loaded="Window_Loaded">

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>



            <Canvas x:Name="CanvasSticker"
                    Background="Gray">
                <Image x:Name="ImageCharacter"
                       Source="/Pictures/Characters/emutest.png"
                       Stretch="Uniform"
                       Width="{Binding ActualWidth, 
                            ElementName=CanvasSticker}"
                       Height="{Binding ActualHeight, 
                            ElementName=CanvasSticker}"/>
                <Canvas x:Name="CanvasTextHolderCurved"
                        Width="{Binding ActualWidth, 
                            ElementName=CanvasSticker}"
                        Height="{Binding ActualHeight, 
                            ElementName=CanvasSticker}"
                        Visibility="Visible"/>
                <Canvas x:Name="CanvasTextHolderStaight"
                        Width="{Binding ActualWidth, 
                            ElementName=CanvasSticker}"
                        Height="{Binding ActualHeight, 
                            ElementName=CanvasSticker}"
                        Visibility="Hidden"/>

            </Canvas>

            <Slider x:Name="SliderX"
                    Grid.Row="1"
                    Minimum="0"
                    Maximum="100"
                    Value="50"/>
            <Slider x:Name="SliderY"
                    Grid.Column="1"
                    Orientation="Vertical"
                    Minimum="0"
                    Maximum="100"
                    Value="80"/>
            <Canvas x:Name="CanvasBtnHolder"
                    Grid.Column="1"
                    Grid.Row="1"
                    Margin="0,0,5,5">
                <Button x:Name="BtnChooseChar"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <Image Source="/Pictures/Icons/user-avatar.png"
                           Width="{Binding ActualWidth, 
                                ElementName=CanvasBtnHolder}"
                            Height="{Binding ActualHeight, 
                                ElementName=CanvasBtnHolder}"/>
                </Button>
            </Canvas>
            
        </Grid>

        <StackPanel Orientation="Vertical"
                    Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Rotation: "/>
                <Slider x:Name="SliderRotation"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Minimum="-90"
                        Maximum="90"
                        Value="-10"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Space: "/>
                <Slider x:Name="SliderSpace"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Minimum="0"
                        Maximum="100"
                        Value="30"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Font Size: "/>
                <Slider x:Name="SliderFontSize"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Minimum="15"
                        Maximum="100"
                        Value="25"/>
            </Grid>

            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>

                <CheckBox x:Name="ChkCurve"
                          Content="Curve"
                          VerticalAlignment="Center"
                          Margin="5,0,0,0"/>
                <Label Content="Padding: "
                       Grid.Column="1"/>
                <Slider x:Name="SliderPadding"
                        VerticalAlignment="Center"
                        Minimum="0.2"
                        Maximum="1"
                        Value="0.2"
                        IsDirectionReversed="True"
                        Grid.Column="2"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Curve&#x0a;level: "
                       Grid.Column="0"/>
                <Slider x:Name="SliderCurveIntensity"
                        VerticalAlignment="Center"
                        Minimum="0.2"
                        Maximum="1"
                        Value="0.2"
                        IsDirectionReversed="True"
                        Grid.Column="1"/>
            </Grid>

            <Grid Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Content="Text&#x0a;(multiline)" 
                       Grid.RowSpan="2"/>
                <TextBox x:Name="TBoxText" 
                         Grid.Column="1"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Text="wwww"/>

                <StackPanel Orientation="Vertical"
                            Grid.Column="3"
                            Margin="10,0,0,0">
                    <Button x:Name="BtnCopy"
                            Content="Copy"
                            Margin="0,0,0,10"/>
                    <Button x:Name="BtnSave"
                            Content="Save"/>
                </StackPanel>

            </Grid>
        </StackPanel>

    </Grid>
</Window>
