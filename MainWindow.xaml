<Window x:Class="Anime_Stiker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Anime_Stiker"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Anime Sticker Creator" 
        Height="240" Width="570"   
        Loaded="Window_Loaded">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            
            
            <Canvas x:Name="CanvasSticker"
                    Background="Gray">
                <Image x:Name="ImageCharacter"
                       Source="/Pictures/emutest.png"
                       Stretch="Uniform"
                       Width="{Binding ActualWidth, 
                            ElementName=CanvasSticker}"
                       Height="{Binding ActualHeight, 
                            ElementName=CanvasSticker}"/>
                <Canvas x:Name="CanvasTextHolderCurved"
                        Width="{Binding ActualWidth, 
                            ElementName=CanvasSticker}"
                        Height="{Binding ActualHeight, 
                            ElementName=CanvasSticker}"
                        Visibility="Visible"/>
                <Canvas x:Name="CanvasTextHolderStaight"
                        Width="{Binding ActualWidth, 
                            ElementName=CanvasSticker}"
                        Height="{Binding ActualHeight, 
                            ElementName=CanvasSticker}"
                        Visibility="Hidden"/>

            </Canvas>
            
            <Slider x:Name="SliderX"
                    Grid.Row="1"
                    Minimum="0"
                    Maximum="100"
                    Value="50"/>
            <Slider x:Name="SliderY"
                    Grid.Column="1"
                    Orientation="Vertical"
                    Minimum="0"
                    Maximum="100"
                    Value="90"/>
        </Grid>

        <StackPanel Orientation="Vertical"
                    Grid.Column="1"
                    Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Rotation: "/>
                <Slider x:Name="SliderRotation"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Minimum="-90"
                        Maximum="90"
                        Value="0"/>
            </Grid>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Space: "/>
                <Slider x:Name="SliderSpace"
                        Grid.Column="1"
                        VerticalAlignment="Center"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Font Size: "/>
                <Slider x:Name="SliderFontSize"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Minimum="10"
                        Maximum="100"
                        Value="25"/>
            </Grid>

            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Content="Text&#x0a;(multiline)" 
                       Grid.RowSpan="2"/>
                <TextBox x:Name="TBoxText" 
                         Grid.Column="1"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Height="50"
                         Text="DMM!"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Margin="5,10,10,10"
                        Content="Characters"/>
                <Button Grid.Column="1"
                        Margin="10"
                        Content="Copy"/>
                <Button Grid.Column="2"
                        Margin="10,10,0,10"
                        Content="Save"/>
            </Grid>

        </StackPanel>
        
    </Grid>
</Window>
